doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    block css
      link(href='https://fonts.googleapis.com/css?family=Open+Sans:100,200,300,400,600', rel='stylesheet')
      script(type='text/javascript', src='//code.jquery.com/jquery-2.1.1.min.js')
      link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
      link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.2.1/css/ripples.min.css')
      link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.2.1/css/material.min.css')
      // build:js scripts/vendor.css
      // bower:css
      link(rel='stylesheet', href='/components/bootstrap-multiselect/css/bootstrap-multiselect.css')
      // endbower
      // endbuild
      link(rel='stylesheet', href='/css/style.css')
    block js
      if ENV_DEVELOPMENT
        script(src='http://localhost:35729/livereload.js')
  body#app
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(data-target='#navbar-collapse', data-toggle='collapse', type='button')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')
            span Linkedin Poke
        #navbar-collapse.collapse.navbar-collapse
          ul.nav.navbar-nav.pull-right
            li
              a(href='/users') Users
            li
              a(href='/pokes') Pokes
            li
              a(href='/logs') Logs
    section#main.container
      block content
    footer
      script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js', type='text/javascript')
      script(src='//cdnjs.cloudflare.com/ajax/libs/retina.js/1.3.0/retina.min.js', type='text/javascript')
      script(src='//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js', type='text/javascript')
      script(src='//cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.2.1/js/ripples.min.js', type='text/javascript')
      script(src='//cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.2.1/js/material.min.js', type='text/javascript')
      // build:js scripts/vendor.js
      // bower:js
      script(src='/components/bootstrap-multiselect/js/bootstrap-multiselect.js')
      // endbower
      // endbuild
      script(src='/js/app.js', type='text/javascript')
